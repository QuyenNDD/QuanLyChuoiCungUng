<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ui.FormDonDatHang">
   <children>
      <VBox prefHeight="200.0" prefWidth="480.0" spacing="15.0" HBox.hgrow="NEVER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TitledPane animated="false" expanded="true" text="Đơn đặt hàng">
              <content>
                        <GridPane hgap="10" layoutX="82.0" layoutY="45.0" vgap="10">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" prefWidth="100.0" />
                          </columnConstraints>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                           <children>
                              <Label text="Mã đơn đặt hàng:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                              <TextField fx:id="txtMaDonDatHang" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                              <Label text="Ngày" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                              <DatePicker fx:id="dteNGAY" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                              <Label text="Nhà cung cấp" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                              <TextField fx:id="txtNhaCungCap" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                              <Label text="Mã Kho:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                              <TextField fx:id="txtMaKho" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                              <Button fx:id="btnChonKhoHang" mnemonicParsing="false" text="Chọn Kho Hàng" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                           </children>
                     <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                     </rowConstraints>
                        </GridPane>
              </content>
            </TitledPane>
            <TitledPane animated="false" expanded="true" text="Chi Tiết Đơn Đặt Hàng">
                  <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="250.0" prefWidth="100.0" />
                    </columnConstraints>
                      <Label text="Mã Vật Tư:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                      <TextField fx:id="txtMaVatTu" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                      <Button fx:id="btnChonVatTu" text="Chọn Vật Tư" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                      <Label text="Số Lượng:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                      <Spinner fx:id="txtSoLuong" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                      <Label text="Đơn Giá:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                      <Spinner fx:id="txtDonGia" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                  </GridPane>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </TitledPane>
         </children>
      </VBox>
      <VBox spacing="10" prefWidth="520" HBox.hgrow="ALWAYS" >
          <children>
              <Label text="Danh Sách Đơn Đặt Hàng:" />
              <TableView fx:id="tableDonDatHang" prefHeight="280" VBox.vgrow="ALWAYS" />

              <Label text="Chi Tiết Đơn Đặt Hàng:" />
              <TableView fx:id="tableChiTietDonDatHang" prefHeight="280" VBox.vgrow="ALWAYS" />
          </children>
      </VBox>

   </children>
</HBox>
