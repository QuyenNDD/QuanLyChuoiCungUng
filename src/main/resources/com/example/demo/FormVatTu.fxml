<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="618.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ui.FormVatTu">
   <top>
       <HBox spacing="10.0" style="-fx-background-color: #f0f0f0;">
           <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Chi Nhánh" />
           <ComboBox fx:id="cmbCHINHANH" disable="true" prefWidth="316" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
       </HBox>
   </top>

   <center>
       <VBox spacing="5.0">

           <TableView fx:id="tableVattu" prefHeight="341" prefWidth="1080">
               <columns>
                   <TableColumn fx:id="colMAVT" prefWidth="150" text="Mã Vật Tư" />
                   <TableColumn fx:id="colTENVT" prefWidth="350" text="Tên Vật Tư" />
                   <TableColumn fx:id="colDVT" prefWidth="150" text="Đơn Vị Tính" />
                   <TableColumn fx:id="colSOLUONGTON" prefWidth="150" text="Số Lượng Tồn" />
               </columns>
           </TableView>

           <TitledPane collapsible="false" text="Thông tin">
               <GridPane hgap="10" vgap="10">
                   <columnConstraints>
                       <ColumnConstraints minWidth="100" />
                       <ColumnConstraints minWidth="200" />
                       <ColumnConstraints minWidth="100" />
                       <ColumnConstraints minWidth="200" />
                   </columnConstraints>

                   <!-- Mã VT -->
                   <Label text="Mã VT" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                   <TextField fx:id="txtMAVT" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                   <!-- Tên VT -->
                   <Label text="Tên VT" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                   <TextField fx:id="txtTENVT" prefWidth="250" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                   <!-- Đơn vị tính -->
                   <Label text="Đơn Vị Tính" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                   <TextField fx:id="txtDONVIVATTU" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                   <!-- Số lượng tồn -->
                   <Label text="Số Lượng Tồn" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                   <Spinner fx:id="txtSOLUONGTON" prefWidth="150" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               </GridPane>
           </TitledPane>

           <padding>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </padding>
       </VBox>
   </center>
</BorderPane>
