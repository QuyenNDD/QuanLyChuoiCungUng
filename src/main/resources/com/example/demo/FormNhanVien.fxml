<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ui.FormNhanVien">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
             <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                 <children>
                     <Button fx:id="btnThem" text="Thêm" />
                     <Button fx:id="btnSua" text="Sửa" />
                     <Button fx:id="btnXoa" text="Xóa" />
                     <Button fx:id="btnLamMoi" text="Làm mới" />
                     <Button fx:id="btnIn" text="In" />
                     <Button fx:id="btnXuatExcel" text="Xuất Excel" />
                 </children>
             </HBox>
             <HBox alignment="CENTER_LEFT" spacing="10">
                 <children>
                     <Label text="Chi nhánh:" />
                     <ComboBox fx:id="cboChiNhanh" prefWidth="200" />
                 </children>
             </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="tableNhanVien" prefHeight="600" prefWidth="1000">
          <columns>
              <TableColumn fx:id="colMaNV" text="Mã NV"/>
              <TableColumn fx:id="colHoTen" text="Họ tên"/>
              <TableColumn fx:id="colGioiTinh" text="Giới tính"/>
              <TableColumn fx:id="colNgaySinh" text="Ngày sinh"/>
              <TableColumn fx:id="colDiaChi" text="Địa chỉ"/>
              <TableColumn fx:id="colSDT" text="SĐT"/>
              <TableColumn fx:id="colEmail" text="Email"/>
              <TableColumn fx:id="colTenDangNhap" text="Tên đăng nhập"/>
              <TableColumn fx:id="colMatKhau" text="Mật khẩu"/>
              <TableColumn fx:id="colQuyen" text="Quyền"/>
          </columns>
      </TableView>
   </center>

    
</BorderPane>
